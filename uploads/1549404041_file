sudo nmcli con mod ITI_Students ipv4.address 172.16.0.15/16
sudo nmcli con mod ITI_Students ipv4.gateway 172.16.0.1
sudo nmcli con mod ITI_Students ipv4.dns 4.2.2.2
sudo nmcli con mod ITI_Students ipv4.method manual
sudo nmcli con up ITI_Students

to remove this setting
sudo nmcli con mod ITI_Students ipv4.method automatic
sudo nmcli con up ITI_Students


sudo apt install apache2
sudo systemctl enable apache2
sudo systemctl restart apache

// to change the port listener for http
sudo gedit /etc/apache2/ports.conf

sudo gedit /etc/apache2/apache2.conf

// file that containt setting of user and group
sudo gedit /etc/apache2/envvar

//1-apache parse config files
//	2-Every reauest will be served due to this configs
//3-if .htaccess exists in any directory,
	2-Every request the web server will read the .htaccess and parse it again
//4-if there is a conflict between main conf files and . htaccess,
	2-the web server will take decision using the AllowOverride
